version: "3"

tasks:
  template:
    desc: Fetch template updates
    interactive: true
    env:
      GIT_CONFIG_GLOBAL: ""
      GIT_CONFIG_SYSTEM: ""
    cmds:
      - >
        copier
        update
        --answers-file
        .copier-answers.yaml
        {{ '{{ .CLI_ARGS }}' }}
  flake:
    desc: Update flake.lock
    cmds:
      - >
        nix
        --accept-flake-config
        --extra-experimental-features
        'nix-command flakes'
        --no-warn-dirty
        flake
        update
        {{ '{{ .CLI_ARGS }}' }}
  fmt:
    desc: Format files
    cmds:
      {%- if docs %}
      - task: install-docs-internal
      {%- endif %}
      - >
        trunk
        fmt
        {{ '{{ .CLI_ARGS }}' }}
  lint:
    desc: Lint files
    cmds:
      {%- if docs %}
      - task: install-docs-internal
      {%- endif %}
      - >
        trunk
        check
        {{ '{{ .CLI_ARGS }}' }}
  {%- if docs %}
  remove-docs-node-modules:
    desc: Clean docs node_modules
    dir: docs/
    cmds:
      - >
        rm
        --recursive
        --force
        node_modules/
    status:
      - >
        test
        '!'
        -d
        node_modules/
  install-docs:
    desc: Install docs dependencies
    dir: docs/
    sources:
      - package-lock.json
      - package.json
      - ../flake.lock
      - ../*.nix
      - ../Taskfile.dist.yaml
      - ../{taskfile,Taskfile}.{yaml,yml}
    generates:
      - node_modules/**/*
    cmds:
      - >
        npm
        install
        {{ '{{ .CLI_ARGS }}' }}
  install-docs-internal:
    desc: Install docs dependencies quietly
    internal: true
    dir: docs/
    cmds:
      - task: install-docs
        vars:
          CLI_ARGS: >
            --prefer-offline
            --no-audit
            --no-fund
            --quiet
            --no-progress
  update-docs:
    desc: Update docs dependencies
    dir: docs/
    cmds:
      - task: install-docs-internal
      - >
        npm
        run
        --
        update
        {{ '{{ .CLI_ARGS }}' }}
  test-docs:
    desc: Test docs
    dir: docs/
    cmds:
      - task: install-docs-internal
      - >
        npm
        run
        --
        test
        {{ '{{ .CLI_ARGS }}' }}
  docs:
    desc: Run docusaurus
    dir: docs/
    interactive: true
    cmds:
      - task: install-docs-internal
      - >
        npm
        run
        --
        docs
        {{ '{{ .CLI_ARGS | default "start --host 0.0.0.0" }}' }}
  {%- endif %}
  validate:
    desc: Check charts for errors
    cmds:
      - >
        helm
        lint
        {{ '{{ .CLI_ARGS | default "src/*" }}' }}
    status:
      - >
        !
        find
        src/
        -mindepth
        1
        -maxdepth
        1
        -type
        d
        |
        grep
        --quiet
        .
  render:
    desc: Render a chart
    cmds:
      - >
        helm
        template
        {{ '{{ .CLI_ARGS }}' }}
  build:
    desc: Package charts
    cmds:
      - >
        mkdir
        --parents
        build/
      - >
        helm
        package
        --destination
        build/
        {{ '{{ .CLI_ARGS | default "src/*" }}' }}
    status:
      - >
        !
        find
        src/
        -mindepth
        1
        -maxdepth
        1
        -type
        d
        |
        grep
        --quiet
        .
  clean:
    desc: Clean build artifacts
    cmds:
      - >
        rm
        --recursive
        --force
        build/
